{
  "name": "ariadne",
  "version": "0.5.8",
  "type": "module",
  "private": true,
  "description": "Monorepo for Ariadne - Find call graphs in your codebase using tree-sitter",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm --filter @ariadnejs/types build && pnpm --filter @ariadnejs/core build && pnpm --filter @ariadnejs/mcp build",
    "typecheck": "pnpm exec tsc --noEmit -p packages/types/tsconfig.json && pnpm exec tsc --noEmit -p packages/core/tsconfig.json && pnpm exec tsc --noEmit -p packages/mcp/tsconfig.json && pnpm exec tsc --noEmit -p entrypoint-analysis/tsconfig.json",
    "test": "pnpm --filter './packages/*' test",
    "lint": "eslint 'packages/*/src/**/*.ts' 'packages/*/tests/**/*.ts' 'entrypoint-analysis/**/*.ts'",
    "lint:fix": "eslint --fix 'packages/*/src/**/*.ts' 'packages/*/tests/**/*.ts' 'entrypoint-analysis/**/*.ts'",
    "clean": "pnpm --filter './packages/*' clean && rm -rf node_modules",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish",
    "prepublishOnly": "pnpm build",
    "check:size": "pnpm exec tsx scripts/check-file-sizes.ts",
    "check:size:warn": "pnpm exec tsx scripts/check-file-sizes.ts || true",
    "validate:captures": "pnpm exec tsx scripts/validate_captures.ts"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^24.0.14",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "markdownlint-cli": "^0.47.0",
    "typescript": "^5.8.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild",
      "tree-sitter",
      "tree-sitter-javascript",
      "tree-sitter-python",
      "tree-sitter-rust",
      "tree-sitter-typescript"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
