{
  "name": "ariadne",
  "version": "0.5.8",
  "private": true,
  "description": "Monorepo for Ariadne - Find call graphs in your codebase using tree-sitter",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build -w @ariadnejs/types && npm run build -w @ariadnejs/core && npm run build -w @ariadnejs/mcp",
    "test": "npm run test --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm run build && changeset publish",
    "prepublishOnly": "npm run build",
    "check:size": "npx tsx scripts/check-file-sizes.ts",
    "check:size:warn": "npx tsx scripts/check-file-sizes.ts || true"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^24.0.14",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}