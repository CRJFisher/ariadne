{
  "name": "ariadne",
  "version": "0.5.8",
  "private": true,
  "description": "Monorepo for Ariadne - Find references and definitions in your codebase using tree-sitter",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm run build && changeset publish",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^24.0.14",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.14.0"
  }
}