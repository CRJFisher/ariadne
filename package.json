{
  "name": "refscope",
  "version": "0.1.0",
  "description": "Find references and definitions in your codebase using tree-sitter",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "jest",
    "build": "tsc && npm run copy-scm-files",
    "copy-scm-files": "cp src/languages/javascript/scopes.scm dist/languages/javascript/ && cp src/languages/typescript/scopes.scm dist/languages/typescript/ && cp src/languages/python/scopes.scm dist/languages/python/",
    "prepublishOnly": "npm run build && npm test",
    "publish:npm": "./scripts/publish.sh",
    "mcp-backlog": "node ./dist/mcp-backlog-server.js",
    "benchmark": "npm run build && node dist/benchmark-incremental.js"
  },
  "keywords": [
    "tree-sitter",
    "code-intelligence",
    "references",
    "definitions",
    "lsp",
    "language-server",
    "typescript",
    "javascript",
    "python"
  ],
  "author": "Chuck",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chuck/refscope.git"
  },
  "bugs": {
    "url": "https://github.com/chuck/refscope/issues"
  },
  "homepage": "https://github.com/chuck/refscope#readme",
  "engines": {
    "node": ">=18.14.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.14",
    "jest": "^30.0.4",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.1",
    "js-yaml": "^4.1.0",
    "tree-sitter": "0.21.1",
    "tree-sitter-javascript": "0.21.4",
    "tree-sitter-python": "0.21.0",
    "tree-sitter-typescript": "0.21.2"
  }
}
