{
  "name": "ariadne",
  "version": "0.5.8",
  "type": "module",
  "private": true,
  "description": "Monorepo for Ariadne - Find call graphs in your codebase using tree-sitter",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build -w @ariadnejs/types && npm run build -w @ariadnejs/core && npm run build -w @ariadnejs/mcp",
    "typecheck": "npx tsc --noEmit -p packages/types/tsconfig.json && npx tsc --noEmit -p packages/core/tsconfig.json && npx tsc --noEmit -p packages/mcp/tsconfig.json && npx tsc --noEmit -p entrypoint-analysis/tsconfig.json",
    "test": "npm run test --workspaces",
    "lint": "eslint 'packages/*/src/**/*.ts' 'packages/*/tests/**/*.ts' 'entrypoint-analysis/**/*.ts'",
    "lint:fix": "eslint --fix 'packages/*/src/**/*.ts' 'packages/*/tests/**/*.ts' 'entrypoint-analysis/**/*.ts'",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm run build && changeset publish",
    "prepublishOnly": "npm run build",
    "check:size": "npx tsx scripts/check-file-sizes.ts",
    "check:size:warn": "npx tsx scripts/check-file-sizes.ts || true",
    "validate:captures": "npx tsx scripts/validate_captures.ts"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^24.0.14",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "markdownlint-cli": "^0.47.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
