{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "types": [
      "node"
    ],
    "downlevelIteration": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "tests/fixtures"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.test_helpers.ts"
  ],
  "references": [
    {
      "path": "../types"
    }
  ]
}