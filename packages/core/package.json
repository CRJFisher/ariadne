{
  "name": "@ariadnejs/core",
  "version": "0.7.0",
  "description": "Core functionality for Ariadne - Find references and definitions in your codebase using tree-sitter",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && npm run copy-scm-files",
    "copy-scm-files": "mkdir -p dist/index_single_file/query_code_tree/queries && cp src/index_single_file/query_code_tree/queries/*.scm dist/index_single_file/query_code_tree/queries/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:with-types": "npm run typecheck && npm test",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "benchmark": "npm test -- project.bench.ts --reporter=verbose",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build && npm test",
    "discover-features": "npx tsx scripts/discover_features.ts",
    "generate-fixtures": "npx tsx scripts/generate_fixtures.ts",
    "generate-fixtures:all": "npx tsx scripts/generate_fixtures.ts --all",
    "generate-fixtures:ts": "npx tsx scripts/generate_fixtures.ts --language typescript",
    "generate-fixtures:js": "npx tsx scripts/generate_fixtures.ts --language javascript",
    "generate-fixtures:py": "npx tsx scripts/generate_fixtures.ts --language python",
    "generate-fixtures:rs": "npx tsx scripts/generate_fixtures.ts --language rust"
  },
  "keywords": [
    "tree-sitter",
    "code-intelligence",
    "references",
    "definitions",
    "lsp",
    "language-server",
    "typescript",
    "javascript",
    "python"
  ],
  "author": "Chuck",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CRJFisher/ariadne.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/CRJFisher/ariadne/issues"
  },
  "homepage": "https://github.com/CRJFisher/ariadne#readme",
  "dependencies": {
    "@ariadnejs/types": "0.5.15",
    "@types/glob": "^8.1.0",
    "glob": "^11.0.3",
    "tree-sitter": "0.21.1",
    "tree-sitter-javascript": "0.21.4",
    "tree-sitter-python": "0.21.0",
    "tree-sitter-rust": "^0.21.0",
    "tree-sitter-typescript": "0.21.2"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "fast-check": "^4.2.0",
    "happy-dom": "^18.0.1",
    "js-yaml": "^4.1.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
